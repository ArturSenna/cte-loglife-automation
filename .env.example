# CTe LogLife - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# FOLDER PATHS
# =============================================================================

# Main folder where CTe XML files are stored
CTE_FOLDER=C:\Path\To\CTe\Files

# Folder for normal CTe files
FOLDERPATH_NORMAL=C:\Path\To\Normal\CTe

# Folder for complementary CTe files
FOLDERPATH_COMPLEMENTAR=C:\Path\To\Complementary\CTe

# =============================================================================
# REPORT PATHS
# =============================================================================

# BSoft Excel report file path
RELATORIO_BSOFT=C:\Path\To\BSoft\Report.xlsx

# Target Excel report file path
RELATORIO_TARGET=C:\Path\To\Target\Report.xlsx

# Output folder for generated reports
OUTPUT_FOLDER=C:\Path\To\Output\Reports

# =============================================================================
# BSOFT CONFIGURATION
# =============================================================================

# Path to BSoft executable (if needed for automation)
BSOFT_PATH=C:\Path\To\BSoft\BSoft.exe

# BSoft login credentials (optional - only if automation requires login)
# WARNING: Keep this file secure and never commit with real credentials
BSOFT_USER=your_username
BSOFT_PASSWORD=your_password

# =============================================================================
# GOOGLE SHEETS INTEGRATION (Optional)
# =============================================================================

# Enable/disable Google Sheets integration
GOOGLE_SHEETS_ENABLED=false

# Path to Google API credentials JSON file
GOOGLE_CREDENTIALS_PATH=credentials.json

# Google Sheet ID (found in the URL)
GOOGLE_SHEET_ID=your_sheet_id_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/cte_loglife.log

# Enable/disable debug mode
DEBUG_MODE=false

# =============================================================================
# AUTOMATION SETTINGS
# =============================================================================

# Default wait time in milliseconds for bot actions
DEFAULT_WAIT_TIME=500

# Maximum retry attempts for failed operations
MAX_RETRIES=3

# Screenshot on error (true/false)
SCREENSHOT_ON_ERROR=true

# Screenshots folder
SCREENSHOTS_FOLDER=screenshots


# =============================================================================
# AUTH INFORMATION
# =============================================================================

